// schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CUSTOMER
  AGENT
}

model User {
  id             Int      @id @default(autoincrement())
  name           String
  email          String   @unique
  password       String
  role           Role     @default(CUSTOMER)
  phone          String?  @unique
  address        String?
  profilePicture String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  bookings Booking[]
  payments Payment[]
}

enum TourType {
  ADVENTURE
  CULTURAL
  BEACH
  CITY
  WILDLIFE
  CRUISE
}

enum TourStatus {
  UPCOMING
  ONGOING
  COMPLETED
  CANCELLED
}

model Tour {
  id           Int        @id @default(autoincrement())
  name         String
  description  String?
  type         TourType
  status       TourStatus @default(UPCOMING)
  duration     Int
  price        Float
  maxGuests    Int
  guestsBooked Int        @default(0)
  startDate    DateTime
  endDate      DateTime
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  bookings      Booking[]
  destination   Destination @relation(fields: [destinationId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  destinationId Int

  @@index([name], name: "tour_name_idx")
  @@index([startDate, endDate], name: "tour_start_end_idx")
  @@index([type, status], name: "tour_type_status_idx")
  @@index([guestsBooked], name: "tour_guest_booked_idx")
}

model Destination {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  country     String
  city        String?
  photo       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tours              Tour[]
  hotels             Hotel[]
  originFlights      Flight[] @relation("FlightOrigin")
  destinationFlights Flight[] @relation("FlightDestination")

  @@index([name], name: "destination_name_idx")
  @@index([country, city], name: "destination_country_city_idx")
}

model Hotel {
  id            Int         @id @default(autoincrement())
  name          String
  description   String?
  address       String
  phone         String?
  photo         String?
  starRating    Int         @default(3)
  amenities     String[]
  destination   Destination @relation(fields: [destinationId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  destinationId Int
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  rooms Room[]

  @@index([name], name: "hotel_name_idx")
  @@index([destinationId], name: "hotel_destination_idx")
  @@index([starRating], name: "hotel_star_rating_idx")
  @@index([address], name: "hotel_address_idx")
}

model Room {
  id            Int      @id @default(autoincrement())
  hotel         Hotel    @relation(fields: [hotelId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  hotelId       Int
  roomType      String
  pricePerNight Float
  capacity      Int
  totalRooms    Int
  photo         String?
  description   String?
  amenities     String[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  bookings Booking[]

  @@index([hotelId, roomType], name: "room_hotel_type_idx")
  @@index([pricePerNight], name: "room_price_idx")
  @@index([capacity], name: "room_capacity_idx")
}

enum FlightStatus {
  SCHEDULED
  DEPARTED
  LANDED
  CANCELLED
  DELAYED
}

model Flight {
  id             Int          @id @default(autoincrement())
  flightNumber   String       @unique
  airline        String
  departure      DateTime
  arrival        DateTime
  origin         Destination  @relation("FlightOrigin", fields: [originId], references: [id], onDelete: Cascade)
  originId       Int
  destination    Destination  @relation("FlightDestination", fields: [destinationId], references: [id], onDelete: Cascade)
  destinationId  Int
  price          Float
  photo          String?
  flightClass    String
  status         FlightStatus @default(SCHEDULED)
  duration       Int
  stops          Int          @default(0)
  capacity       Int
  seatsAvailable Int          @default(0)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  bookings Booking[]

  @@index([originId, destinationId])
  @@index([departure, arrival])
  @@index([status])
  @@index([seatsAvailable])
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

model Booking {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId Int

  tour   Tour? @relation(fields: [tourId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  tourId Int?

  room   Room? @relation(fields: [roomId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  roomId Int?

  flight   Flight? @relation(fields: [flightId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  flightId Int?

  status BookingStatus @default(PENDING)

  numberOfGuests  Int     @default(1)
  specialRequests String?

  startDate      DateTime? // Check-in date for rooms
  endDate        DateTime? // Check-out date for rooms
  numberOfRooms  Int       @default(1) // How many rooms booked
  numberOfNights Int       @default(1) // Auto-calculated nights

  paymentDeadline          DateTime? // When payment must be completed
  requiresImmediatePayment Boolean   @default(false) // Flag for same-day bookings

  totalPrice  Float
  bookingDate DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  payment Payment?

  @@unique([userId, tourId])
  @@unique([userId, roomId, startDate, endDate])
  @@unique([userId, flightId])
  @@index([userId, tourId, roomId, flightId], name: "booking_user_tour_hotel_room_flight_idx")
  @@index([status])
  @@index([paymentDeadline])
  @@index([startDate, endDate])
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum PaymentMethod {
  CREDIT_CARD
  DEBIT_CARD
  MOBILE_MONEY
  BANK_TRANSFER
}

model Payment {
  id                   Int           @id @default(autoincrement())
  booking              Booking       @relation(fields: [bookingId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  bookingId            Int           @unique
  user                 User          @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId               Int
  amount               Float
  currency             String        @default("GHS")
  status               PaymentStatus @default(PENDING)
  paymentDate          DateTime?
  paymentMethod        PaymentMethod
  transactionReference String?       @unique
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt

  @@index([userId], name: "payment_user_idx")
  @@index([transactionReference], name: "payment_transaction_ref_idx")
  @@index([status])
}
