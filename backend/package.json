{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend code for Travel Trek",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --env-file .env server.ts",
    "clean": "rm -rf build",
    "build": "npm run clean && npx tsc --diagnostics && cp -r generated build/ && echo 'Build completed successfully!'",
    "start": "node build/server.js",
    "startDev": "node --env-file .env build/server.js",
    "migrate": "npx prisma migrate dev --name init",
    "seed": "tsx prisma/seed.ts",
    "deploy": "npm install && npx prisma generate && npx prisma migrate deploy && npm run seed && npm run build"
  },
  "keywords": [
    "travel",
    "tour"
  ],
  "author": "Abdul-Majeed Nurudeen",
  "license": "ISC",
  "devDependencies": {
    "dotenv": "^17.2.0",
    "eslint": "^9.31.0",
    "express": "^5.1.0",
    "install": "^0.13.0",
    "nodemon": "^3.1.10",
    "npm": "^11.4.2",
    "prettier": "^3.6.2",
    "prisma": "^6.12.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.1.0",
    "@types/redis": "^4.0.10",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "ioredis": "^5.8.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "pino": "^9.7.0",
    "pino-pretty": "^13.1.1",
    "tsx": "^4.20.6"
  }
}
